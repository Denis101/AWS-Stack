{
  "Description": "LAMP Stack DB servers",
  "Parameters": {
    "VpcId": {
      "Type": "String"
    },
    "InstanceTypeDbserver": {
      "Type": "String",
      "Default": "db.t2.micro"
    },
    "DbEngine": {
      "Type": "String",
      "Default": "MySQL"
    },
    "DbName": {
      "Type": "String",
      "Default": "test"
    },
    "DbUsername": {
      "Type": "String"
    },
    "DbPassword": {
      "Type": "String"
    }
  },
  "Resources": {
    "DbServer": {
      "Type" : "AWS::RDS::DBInstance",
        "Properties" : {
          "DBInstanceIdentifier": {
            "Fn::Join": [ "-",
              [
                { "Ref": "DbEngine" },
                { "Ref": "DbName" },
                "test"
              ]
            ]
          },
          "DBName": { "Ref": "DbName" },
          "AllocatedStorage" : "5",
          "DBInstanceClass" : { "Ref": "InstanceTypeDbserver" },
          "Engine" : { "Ref": "DbEngine" },
          "MasterUsername" : { "Ref": "DbUsername" },
          "MasterUserPassword" : { "Ref": "DbPassword" },
          "MultiAZ": "true",
          "VPCSecurityGroups": [
            { "Ref": "DBSecurityGroup" }
          ],
          "Tags": [
            {
              "Key": "role",
              "Value": "dbservers"
            }
          ]
      },
      "DeletionPolicy" : "Snapshot"
    },
    "DBSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Security Group for dbservers",
        "VpcId": { "Ref": "VpcId" },
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": "3306",
            "ToPort": "3306",
            "CidrIp": "172.31.0.0/16"
          }
        ]
      }
    }
  }
}
